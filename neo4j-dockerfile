FROM neo4j:4.4

EXPOSE 7474
EXPOSE 7687

ENV NEO4J_server_default__listen_address=0.0.0.0
ENV NEO4J_server_bolt_enabled=true
ENV NEO4J_server_bolt_listen__address=0.0.0.0:7687
ENV NEO4J_server_http_enabled=true
ENV NEO4J_server_http_listen__address=0.0.0.0:7474
ENV NEO4J_server_windows__service__name=neo4j
ENV NEO4J_dbms_security_procedures_unrestricted=spatial.*
ENV NEO4J_server_databases_writable=true

ADD https://github.com/neo4j-contrib/spatial/releases/download/0.28.1-neo4j-4.4.3/neo4j-spatial-0.28.1-neo4j-4.4.3-server-plugin.jar /plugins

VOLUME /logs /data
